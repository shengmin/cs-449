mixin message-menu
  header#message-menu(data-role="header")
    div(data-role="navbar")
      a(data-role="button", data-align="right", data-icon="trash") Ignore
      a(data-role="button", data-align="right", data-icon="add") Add
      a(data-role="button", data-align="right", data-icon="folder") Move

mixin reminder-menu
  header#reminder-menu(data-role="header")
    div(data-role="navbar")
      a(data-role="button", data-align="right", data-icon="recents") Remind Later

mixin search-bar
  ul(data-role="listview")
    li(data-icon="search")
      label &nbsp;
        input(type="search", placeholder="Search")

mixin footer
  footer(data-role="footer")
    div(data-role="navbar")
      a(data-role="button", data-icon="home", href="#task-list-view") Home

mixin task-menu
  div#remind-me-popover(data-role="popover", data-popup="{ height: '16em', width: '28em' }")
    div(data-role="view", data-init="onRemindMePopOverInit")
      ul(data-role="listview")
        li
          label In One Day
            input(name="remind-me", type="radio")
        li
          label In One Week
            input(name="remind-me", type="radio")
        li
          label In One Month
            input(name="remind-me", type="radio")
        li
          label Custom
            input(name="remind-me", type="date")

  header#task-menu(data-role="header")
    div(data-role="navbar")
      a(data-align="right", data-role="button", data-icon="forward", href="#task-forward-view") Forward
      a(data-align="right", data-role="button", data-icon="recents", href="#remind-me-popover", data-rel="popover") Remind Me Later
      a#task-menu-mark-complete(data-click="onMenuMarkCompleteClick", data-align="right", data-role="button", data-icon="check") Mark Complete
    ul(data-role="listview")
      li(data-icon="search")
        label &nbsp;
          input(type="search", placeholder="Search")
